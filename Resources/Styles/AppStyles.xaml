<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    
    <Color x:Key="BgPage">#E7EBF0</Color>
    <Color x:Key="BgPage2">#FEFEFE</Color>
    <Color x:Key="EntryBackground">#E7EBF0</Color>
    
    <Style TargetType="Page" ApplyToDerivedTypes="True">
        <Setter Property="BackgroundColor" Value="{StaticResource BgPage}" />
    </Style>
    
    <Style TargetType="Button">
        <Setter Property="BackgroundColor" Value="#243C78"/>
        <Setter Property="TextColor" Value="{StaticResource BgPage2}" />
        <Setter Property="FontFamily" Value="JaldiBold" />
    </Style>
    
</ResourceDictionary>