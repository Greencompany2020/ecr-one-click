<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    
    <Style TargetType="Page" ApplyToDerivedTypes="True">
        <Setter Property="BackgroundColor" Value="#E7EBF0" />
    </Style>
    
    <Style TargetType="Button">
        <Setter Property="BackgroundColor" Value="#243C78"/>
        <Setter Property="TextColor" Value="#FEFEFE" />
        <Setter Property="FontFamily" Value="JaldiBold" />
    </Style>
</ResourceDictionary>