<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EcrOneClick.Presentation.Views.ConfigurationsPage"
             xmlns:components="clr-namespace:EcrOneClick.Presentation.Views.Components">
    <Grid RowDefinitions=".1*,.9*"
          RowSpacing="10">
        <components:RectangleBackground />
        <components:TitleView Title="Configuraciones" />

        <Frame
            Grid.Row="1"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            BackgroundColor="{StaticResource BgPage2}"
            BorderColor="Transparent"
            WidthRequest="500"
            >
            <StackLayout
                HorizontalOptions="Fill">
                <HorizontalStackLayout
                    HorizontalOptions="Center">
                    <Label
                        Text="Tienda"
                        TextColor="Black"
                        VerticalOptions="Center"
                        Margin="0,0,10,0"/>
                    <Entry
                        WidthRequest="130"
                        Placeholder="Codigo de Tienda"
                        TextColor="Black"
                        Margin="0,0,10,0"
                        BackgroundColor="{StaticResource EntryBackground}"
                        />
                    <Label
                        Text="Caja"
                        TextColor="Black"
                        VerticalOptions="Center"
                        Margin="0,0,10,0"/>
                    <Entry
                        WidthRequest="80"
                        TextColor="Black"
                        Placeholder="No. Caja"
                        BackgroundColor="{StaticResource EntryBackground}"
                        />
                </HorizontalStackLayout>
                <components:ConfigEntry
                    LabelText="Docker User:"
                    EntryPlaceholder="Usuario" />
                
                <components:ConfigEntry
                    LabelText="Docker Pass:"
                    EntryPlaceholder="Password"
                    IsSecret="True" />
                
                <components:ConfigEntry
                    LabelText="Docker Token:"
                    EntryPlaceholder="Token"
                    IsSecret="True" />
                
                <components:ConfigEntry
                    LabelText="DopplerToken:"
                    EntryPlaceholder="Token"
                    IsSecret="True" />
            </StackLayout>
        </Frame>
    </Grid>
</ContentPage>