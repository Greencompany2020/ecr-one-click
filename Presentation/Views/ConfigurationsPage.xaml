<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EcrOneClick.Presentation.Views.ConfigurationsPage"
             xmlns:components="clr-namespace:EcrOneClick.Presentation.Views.Components"
             xmlns:viewmodel="clr-namespace:EcrOneClick.Presentation.ViewModels">
    
    <ContentPage.BindingContext>
        <viewmodel:ConfigurationsViewModel />
    </ContentPage.BindingContext>
    
    <Grid RowDefinitions=".1*,.9*"
          RowSpacing="10">
        <components:RectangleBackground />
        <components:TitleView Title="Configuraciones" />

        <Frame
            Grid.Row="1"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            BackgroundColor="{StaticResource BgPage2}"
            BorderColor="Transparent"
            WidthRequest="450"
            >

            <StackLayout
                HorizontalOptions="Fill"
                Spacing="5">
                
                <!-- Datos de caja -->
                <HorizontalStackLayout
                    HorizontalOptions="Center"
                    >
                    <Label
                        Text="Tienda:"
                        TextColor="Black"
                        VerticalOptions="Center"
                        HorizontalOptions="Center"
                        Margin="0,0,10,0" />
                    <Entry
                        Placeholder="Clave de Tienda"
                        TextColor="Black"
                        BackgroundColor="{StaticResource EntryBackground}" />
                    
                    <Label
                        Text="Caja:"
                        TextColor="Black"
                        VerticalOptions="Center"
                        HorizontalOptions="Center"
                        Margin="15,0,10,0"/>
                    <Entry
                        TextColor="Black"
                        Placeholder="No. Caja"
                        BackgroundColor="{StaticResource EntryBackground}"
                    />
                </HorizontalStackLayout>
                <!-- FIN Datos de caja -->
                
                <!-- USUARIO DOCKER -->
                <HorizontalStackLayout
                    HorizontalOptions="Center"
                    >
                    <Label
                        Text="Docker User:"
                        TextColor="Black"
                        VerticalOptions="Center"
                        HorizontalOptions="Center"
                        Margin="0,0,10,0"
                        />
                    <Entry
                        TextColor="Black"
                        WidthRequest="200"
                        Placeholder="Usuario"
                        BackgroundColor="{StaticResource EntryBackground}"
                        Text="{Binding Config.DockerUser}"
                        x:Name="DockerUserEntry"/>
                </HorizontalStackLayout>
                <!-- FIN USUARIO DOCKER -->
            
                <!-- DOCKER PASSWORD -->
                <HorizontalStackLayout
                    HorizontalOptions="Center"
                    >
                    <Label
                        Text="Docker Pass:"
                        TextColor="Black"
                        VerticalOptions="Center"
                        HorizontalOptions="Center"
                        Margin="0,0,10,0"
                    />
                    <HorizontalStackLayout
                        WidthRequest="200"
                        BackgroundColor="{StaticResource EntryBackground}"
                        >
                        <Entry
                            TextColor="Black"
                            WidthRequest="160"
                            Placeholder="Password"
                            BackgroundColor="{StaticResource EntryBackground}"
                            Text="{Binding Config.DockerPass}"
                            IsPassword="{Binding HidePassword}"
                            />
                        <ImageButton
                            Source="closed_eye.png"
                            HorizontalOptions="Start"
                            Scale="0.7"
                            x:Name="DockerPasswordHideButton"
                            Clicked="OnDockerPasswordHideButtonClicked"
                        />
                    </HorizontalStackLayout>
                </HorizontalStackLayout>
                <!-- FIN DOCKER PASSWORD -->
                
                <!-- DOCKER TOKEN -->
                <HorizontalStackLayout
                    HorizontalOptions="Center"
                    >
                    <Label
                        Text="Docker Token:"
                        TextColor="Black"
                        VerticalOptions="Center"
                        HorizontalOptions="Center"
                        Margin="0,0,10,0"
                    />
                    <HorizontalStackLayout
                        WidthRequest="200"
                        BackgroundColor="{StaticResource EntryBackground}"
                        >
                        <Entry
                            TextColor="Black"
                            WidthRequest="160"
                            Placeholder="Token"
                            BackgroundColor="{StaticResource EntryBackground}"
                            Text="{Binding Config.DockerToken}"
                            IsPassword="{Binding HideDockerToken}"/>
                        <ImageButton
                            Source="closed_eye.png"
                            HorizontalOptions="Start"
                            Scale="0.7"
                            x:Name="DockerTokenHidButton"
                            Clicked="OnDockerTokenHidButtonClicked"
                        />
                    </HorizontalStackLayout>
                </HorizontalStackLayout>
                <!-- FIN DOCKER TOKEN -->
            
                <!-- DOPPLER TOKEN -->
                <HorizontalStackLayout
                    HorizontalOptions="Center"
                    >
                    <Label
                        Text="Doppler Token:"
                        TextColor="Black"
                        VerticalOptions="Center"
                        HorizontalOptions="Center"
                        Margin="0,0,10,0"
                    />
                    <HorizontalStackLayout
                        WidthRequest="200"
                        BackgroundColor="{StaticResource EntryBackground}"
                        >
                        <Entry
                            TextColor="Black"
                            WidthRequest="160"
                            Placeholder="Token"
                            BackgroundColor="{StaticResource EntryBackground}"
                            Text="{Binding Config.DopplerToken}"
                            IsPassword="{Binding HideDopplerToken}" />
                        <ImageButton
                            Source="closed_eye.png"
                            HorizontalOptions="Start"
                            Scale="0.7"
                            x:Name="DopplerTokenHideButton"
                            Clicked="OnDopplerTokenHideButtonClicked"
                        />
                    </HorizontalStackLayout>
                </HorizontalStackLayout>
                <!-- FIN DOPPLER TOKEN -->
            
                <Button
                    Text="Guardar"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    Margin="0,10,0,0"
                    FontSize="20"
                    />
        </StackLayout>
        </Frame>
    </Grid>
</ContentPage>