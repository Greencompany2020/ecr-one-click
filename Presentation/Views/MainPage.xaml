<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EcrOneClick.Presentation.Views.MainPage"
             xmlns:local="clr-namespace:EcrOneClick.Presentation.Components">

    <Grid RowDefinitions=".1*,.9*"
          RowSpacing="10"
          >
        <local:RectangleBackground />
        <local:TitleView Title="Ecr One Click" />
        
        <Rectangle Grid.Row="1"  Fill="#FEFEFE"/>
        <StackLayout
            Grid.Row="1"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            Spacing="15"
            >
            <Button
                Text="Servicios"
                FontSize="25"
                WidthRequest="180"
                HeightRequest="80"
                />
            <Button
                Text="Configuraciones"
                FontSize="25"
                WidthRequest="180"
                HeightRequest="80"
                Clicked="OnConfigurationsButtonClicked"
                />
        </StackLayout>
    </Grid>

</ContentPage>
