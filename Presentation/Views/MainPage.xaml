<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EcrOneClick.Presentation.Views.MainPage">

    <Grid RowDefinitions=".1*,.9*"
          RowSpacing="10"
          >
        <Rectangle Fill="#FEFEFE"/>
        <Label
            VerticalOptions="Center"
            HorizontalOptions="Center"
            Text="Ecr One Click" 
            TextColor="Black"
            FontSize="Title"
            />
        
        <Rectangle Grid.Row="1"  Fill="#FEFEFE"/>
        <StackLayout
            Grid.Row="1"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            Spacing="15"
            >
            <Button
                Text="Servicios"
                FontSize="25"
                WidthRequest="180"
                HeightRequest="80"
                />
            <Button
                Text="Configuraciones"
                FontSize="25"
                WidthRequest="180"
                HeightRequest="80"
                />
        </StackLayout>
    </Grid>

</ContentPage>
